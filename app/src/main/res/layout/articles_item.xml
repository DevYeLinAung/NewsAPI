<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/glaciar_grey_stoke"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/dimen_16dp"/>

        <TextView
            android:id="@+id/txt_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is a development title"
            android:maxLines="1"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"/>

        <TextView
            android:id="@+id/txt_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is a development date"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"/>

        <TextView
            android:id="@+id/txt_article_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is a development description"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
